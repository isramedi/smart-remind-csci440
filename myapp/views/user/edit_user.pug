doctype html
html(lang='en')
  include ../common/head.pug
  +head("Edit User")
  body
    header
      include ../common/navbar.pug
      +navbar(users)
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 Edit User
            form(action="/dashboard/user/"+user.id+"/edit", method="POST")

              .input-group.mb-3
                input(name="user_username", type="text", placeholder="Enter user name").form-control
                .input-group-append

              .input-group.mb-3
                input(name="user_firstname", type="text", placeholder="Enter first name").form-control
                .input-group-append

              .input-group.mb-3
                input(name="user_lastname", type="text", placeholder="Enter last name").form-control
                .input-group-append

              .input-group.mb-3
                input(name="user_email", type="email", placeholder="Enter email").form-control
                .input-group-append

              .input-group.mb-3
                .input-group-append
                  button(type="submit").btn.btn-primary Save
    include ../common/footer.pug
    +footer()
