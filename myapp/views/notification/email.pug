doctype html
html(lang='en')
  include ../common/head.pug
  +head("Email")
  body
    header
      include ../common/navbar.pug
      +navbar(users)
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 Email
            form(action="/email", method="POST")

              .input-group.mb-3
                .input-group-append
                  button(type="submit").btn.btn-primary SEND EMAIL
            h1 User Reminds
            table.table
              thead
                tr
                  th(scope="col") Category
                  th(scope="col") Title
                  th(scope="col") notes
                  th(scope="col") Date of Remind
                  th(scope="col") Type
                  th(scope="col") Urgency
                  th(scope="col") Expired
                  th(scope="col") <>user created
                  th(scope="col") <>group
                  th(scope="col") DETAILS
                  th(scope="col") EMAIL
                  th(scope="col") Done/Delete
                tr
              tbody
                for remind in reminds
                  tr(id=remind.id)
                    td
                      span #{remind.category}
                    td
                      span #{remind.title}
                    td
                      span #{remind.notes}
                    td
                      span #{remind.dateOfRemind}
                    td
                      span #{remind.type}
                    td
                      span #{remind.urgency}
                    td
                      span #{remind.expired}
                    td
                      span #{remind.UserId}
                    td
                      span #{remind.groups_id}
                    td
                      a(href="/dashboard/remind/" + remind.id) Details
                    td
                      form(action="/email", method="POST")
                        button(type="submit").btn.btn-primary EMAIL
                    td
                      button(onclick=`deleteRemind('${remind.id}')`).btn.btn-primary Delete
    include ../common/footer.pug
    +footer()
