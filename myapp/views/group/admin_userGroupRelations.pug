doctype html
html(lang='en')
  include ../common/head.pug
  +head("userGroupRelation")
  body
    header
      include ../common/navbar.pug
      +navbar(user)
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 userGroupRelation
            table.table
              thead
                tr
                  th(scope="col") userGroup_id
                  th(scope="col") user_id
                  th(scope="col") group_id
                  th(scope="col") USER DETAILS 
                  th(scope="col") GROUP DETAILS 
                  th(scope="col") Delete
                tr
              tbody
                for userGroupRelation in userGroupRelations
                  tr(id=userGroupRelation.id)
                    td
                      span #{userGroupRelation.id}
                    td
                      span #{userGroupRelation.user_id}
                    td
                      span #{userGroupRelation.group_id}
                    td
                      a(href="/dashboard/group/" + userGroupRelation.user_id) Details-USER
                    td
                      a(href="/dashboard/group/" + userGroupRelation.group_id) Details-GROUP
                    td
                      button(onclick=`deleteUserGroupRelation('${userGroupRelation.id}')`).btn.btn-primary Delete
    include ../common/footer.pug
    +footer()
    script(src='/javascripts/userGroupRelations.js')
