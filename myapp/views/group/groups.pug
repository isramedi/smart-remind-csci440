doctype html
html(lang='en')
  include ../common/head.pug
  +head("Groups")
  body
    header
      include ../common/navbar.pug
      +navbar(users)
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 Groups
            table.table
              thead
                tr
                  th(scope="col") Name
                  th(scope="col") Users
                  th(scope="col") DETAILS
                  th(scope="col") Delete
                tr
              tbody
                for group in groups
                  tr(id=group.id)
                    td
                      span #{group.name}
                    //td
                    //  span #{group.users}
                    td
                      a(href="/dashboard/group/" + group.id) Details
                    td
                      button(onclick=`deleteGroup('${group.id}')`).btn.btn-primary Delete
    include ../common/footer.pug
    +footer()
    script(src='/javascripts/groups.js')
