doctype html
html(lang='en')
  include ../common/head.pug
  +head("Group")
  body
    header
      include ../common/navbar.pug
      +navbar(users)
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 Group
            table.table
              thead
                tr
                  th(scope="col") Name
                  th(scope="col") Users
                  th(scope="col") edit
                  th(scope="col") Delete
                tr
              tbody
                tr(id=group.id)
                    td
                      span #{group.name}
                    //td
                      //span #{group.name}
                    td
                      a(href="/dashboard/group/" + group.id + "/edit") Edit
                    td
                      form(action="/dashboard/group/" + group.id + "/delete", method="POST")
                        button(type="submit").btn.btn-primary Delete
    include ../common/footer.pug
    +footer()
    script(src='/javascripts/groups.js')
